<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender for displaying logs in the console -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level - %msg%n"/>
        </Console>

        <!-- File Appender to log everything in one file without overwriting -->
        <File name="File" fileName="C:/Users/Nikshepa/eclipse-workspace/SeleniumTestNgProject4thDec/logs/logfile.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level - %msg%n</Pattern>
            </PatternLayout>
        </File>

    </Appenders>

    <Loggers>
        <!-- Logger configuration for your package -->
        <Logger name="com.sdetadda" level="info" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <!-- Root Logger configuration to output all logs to the File appender -->
        <Root level="info">
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
